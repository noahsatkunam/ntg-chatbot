# N8N Configuration for Local Development
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=false
N8N_DISABLE_UI=false

# Database Configuration
DB_TYPE=sqlite
DB_SQLITE_DATABASE=.n8n/database.sqlite

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/

# Security
N8N_JWT_AUTH_ACTIVE=false
N8N_ENCRYPTION_KEY=n8n-local-dev-encryption-key-32chars

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Editor Configuration
N8N_EDITOR_BASE_URL=http://localhost:5678

# Execution Configuration
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular

# Generic OAuth Configuration
N8N_GENERIC_TIMEZONE=America/Los_Angeles

# Local Development Flags
NODE_ENV=development
N8N_METRICS=false
N8N_DIAGNOSTICS_ENABLED=false

# Integration with Backend
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Workflow Data Directory
N8N_USER_FOLDER=.n8n
