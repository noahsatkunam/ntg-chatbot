# Production Environment Variables
# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/ntg_chatbot_prod
POSTGRES_DB=ntg_chatbot_prod
POSTGRES_USER=ntg_user
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=secure_redis_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# n8n Configuration
N8N_DB_NAME=n8n_prod
N8N_DB_USER=n8n_user
N8N_DB_PASSWORD=secure_n8n_password
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_n8n_admin_password
N8N_WEBHOOK_URL=https://your-domain.com/webhook

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# Nginx Proxy Manager
NPM_DB_NAME=npm
NPM_DB_USER=npm_user
NPM_DB_PASSWORD=secure_npm_password
MYSQL_ROOT_PASSWORD=secure_mysql_root_password

# Security
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads

# Timezone
TIMEZONE=UTC

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
