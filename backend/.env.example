# Backend Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chatbot_platform

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration (REQUIRED - Generate a secure secret: openssl rand -base64 32)
JWT_SECRET=# Required: Must be at least 32 characters. No default provided for security.
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=chatbot-platform
JWT_AUDIENCE=chatbot-platform-api

# Password Policy
BCRYPT_ROUNDS=12
MIN_PASSWORD_LENGTH=8

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@chatbot-platform.com

# Security Configuration
COOKIE_SECRET=your_cookie_secret_min_32_chars
SESSION_SECRET=your_session_secret_min_32_chars
CSRF_TOKEN_SECRET=your_csrf_secret_min_32_chars
OAUTH2_ENCRYPTION_KEY=your_32_byte_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_SKIP_SUCCESSFUL=true

# 2FA Configuration
TWO_FACTOR_APP_NAME=ChatbotPlatform
TWO_FACTOR_WINDOW=1

# Audit Log Retention (days)
AUDIT_LOG_RETENTION_DAYS=90

# Optional: Monitoring
SENTRY_DSN=
