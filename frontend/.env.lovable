# Lovable Preview Environment Variables
# API Configuration for Lovable Preview
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# N8N Integration
VITE_N8N_URL=http://localhost:5678
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Authentication - Mock for preview
VITE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback
VITE_ENABLE_AUTH=false
VITE_MOCK_AUTH=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md,.jpg,.jpeg,.png,.gif

# Chat Configuration
VITE_CHAT_MODEL=gpt-4
VITE_CHAT_MAX_TOKENS=4000
VITE_CHAT_TEMPERATURE=0.7

# Feature Flags - Optimized for Lovable
VITE_ENABLE_STREAMING=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_WORKFLOWS=true
VITE_ENABLE_2FA=false
VITE_ENABLE_MOCK_DATA=true

# Development Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_DEBUG=true
VITE_MOCK_BACKEND=false

# Security - Relaxed for preview
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS_ONLY=false

# Lovable Specific
VITE_PREVIEW_MODE=true
VITE_LOVABLE_PREVIEW=true
