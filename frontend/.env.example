# Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001
VITE_PORT=5173

# N8N Integration
VITE_N8N_URL=http://localhost:5678
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Authentication
VITE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback
VITE_ENABLE_AUTH=true
VITE_MOCK_AUTH=false

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md,.jpg,.jpeg,.png,.gif

# Chat Configuration
VITE_CHAT_MODEL=gpt-4
VITE_CHAT_MAX_TOKENS=4000
VITE_CHAT_TEMPERATURE=0.7

# Feature Flags
VITE_ENABLE_STREAMING=true
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=false

# Optional: Analytics and Monitoring
VITE_GA_ID=
VITE_SENTRY_DSN=
VITE_POSTHOG_KEY=

# Development/Production Mode
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
