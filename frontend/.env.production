# Production Environment Variables
# API Configuration
VITE_API_URL=https://api.ntg-chatbot.com/api
VITE_WS_URL=wss://api.ntg-chatbot.com

# Authentication
VITE_AUTH_REDIRECT_URL=https://app.ntg-chatbot.com/auth/callback

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md,.jpg,.jpeg,.png,.gif

# Chat Configuration
VITE_CHAT_MODEL=gpt-4
VITE_CHAT_MAX_TOKENS=4000
VITE_CHAT_TEMPERATURE=0.7

# Feature Flags
VITE_ENABLE_STREAMING=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_WORKFLOWS=true
VITE_ENABLE_2FA=true

# Monitoring (Optional)
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
