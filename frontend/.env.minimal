# Minimal environment for bulletproof builds
# This file contains only essential variables with safe defaults

# Build Configuration
NODE_ENV=production
VITE_BASE_URL=./

# API Configuration - Safe defaults
VITE_API_URL=/api
VITE_WS_URL=

# Authentication - Disabled for safety
VITE_ENABLE_AUTH=false
VITE_MOCK_AUTH=true

# Features - Minimal set enabled
VITE_ENABLE_STREAMING=false
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_WORKFLOWS=false
VITE_ENABLE_2FA=false

# Development - Safe defaults
VITE_MOCK_BACKEND=true
VITE_PREVIEW_MODE=true
VITE_ENABLE_DEBUG=false

# File Upload - Conservative limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.txt,.md

# Chat - Basic configuration
VITE_CHAT_MODEL=gpt-3.5-turbo
VITE_CHAT_MAX_TOKENS=1000
VITE_CHAT_TEMPERATURE=0.7
